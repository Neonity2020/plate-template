{
  "name": "plate-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "depset": "pnpm dlx depset@latest @udecode --yes",
    "dev": "next dev --turbo",
    "lint": "next lint",
    "lint:fix": "next lint --fix && prettier --write . --log-level warn",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@udecode/cn": "^48.0.3",
    "@udecode/plate": "^48.0.3",
    "@udecode/plate-basic-elements": "^48.0.0",
    "@udecode/plate-basic-marks": "^48.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "0.509.0",
    "next": "^15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "3.3.0",
    "tailwind-scrollbar-hide": "^2.0.0",
    "tw-animate-css": "^1.2.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "4.1.6",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "eslint": "^9.26.0",
    "eslint-config-next": "15.3.2",
    "eslint-plugin-perfectionist": "4.12.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.12",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "4.1.6",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.2.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "scheduler"
      ]
    }
  }
}
